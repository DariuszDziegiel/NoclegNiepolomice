{# @var cmsGallery \AdminBundle\Entity\CmsGallery #}
{# @var image \AdminBundle\Entity\CmsGalleryFile #}
{% if images is not empty %}
    <div class="gallery-preview-images">
        {% for image in images %}
            <a href="{{ asset('thumb.php') }}?src={{ asset(cmsGallery.filesDir ~ image.fileName) }}&w=1024">
                <img src="{{ asset('thumb.php') }}?src={{ asset(cmsGallery.filesDir ~ image.fileName) }}&w=60&h=60" class="img-thumbnail">
            </a>
        {% endfor %}
    </div>
    {% else %}
        <span class="label label-danger">Brak zdjęć w galerii</span>
{% endif %}