{# @var cmsGallery \AdminBundle\Entity\CmsGallery #}
{# @var maxSort int #}
<div class="btn-group" role="group">
    {% if cmsGallery.sort != 0 %}
        <a href="{{ path('cms_gallery_sort', {'id': cmsGallery.id, 'direction': 'up'}) }}" class="btn btn-default" data-toggle="tooltip" title="Przenieś wyżej">
            <span class="glyphicon glyphicon-arrow-up"></span>
        </a>
    {% endif %}
    {% if cmsGallery.sort != maxSort %}
        <a href="{{ path('cms_gallery_sort', {'id': cmsGallery.id, 'direction': 'down'}) }}" class="btn btn-default" data-toggle="tooltip" title="Przenieś niżej">
            <span class="glyphicon glyphicon-arrow-down"></span>
        </a>
    {% endif %}
    {% if cmsGallery.sort != 0 %}
        <a href="{{ path('cms_gallery_sort', {'id': cmsGallery.id, 'direction': 'first'}) }}" class="btn btn-default">
            <small>Przenieś na początek</small>
        </a>
    {% endif %}
    {% if cmsGallery.sort != maxSort %}
        <a href="{{ path('cms_gallery_sort', {'id': cmsGallery.id, 'direction': 'last'}) }}" class="btn btn-default">
            <small>Przenieś na koniec</small>
        </a>
    {% endif %}
</div>