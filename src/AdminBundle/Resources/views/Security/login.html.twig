{% extends 'AdminBundle::layout.html.twig' %}

{% block content %}
<div id="admin-login-form-wrapper">
    <div class="row">
        <div class="col-xs-12">
            <div class="logo text-center">
                <h1>{{ page_name }}</h1>
            </div>
        </div>
    </div>
    {% if error %}
        <div class="row">
            <div class="col-xs-12">
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-xs-12">
            <form class="form-horizontal login-form" action="{{ path('admin_login') }}" method="post">
                <div id="login-fields">
                    <div class="form-group">
                        <label for="username" class="col-sm-2 control-label">Login:</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" autocomplete="off" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">Hasło:</label>
                        <div class="col-sm-10">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                <input type="password" id="password" class="form-control" name="_password" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <button class="btn btn-success pull-right" type="submit" name="login">
                                <b>ZALOGUJ</b>
                            </button>
                        </div>
                        <!--<label class="checkbox">
                            <input type="checkbox" value="1" name="user_rememberme"> Zapamiętaj mnie
                        </label>-->
                    </div>
                    <div class="form-group">
                        <!--<a href="<?php echo site_url(array('admin', 'password_reset')) ?>">Przypomnij haslo</a>-->
                    </div>
                    <input type="hidden" name="_target_path" value="/admin" />
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                </div>

            </form>
        </div>
    </div>
</div>
{% endblock %}




