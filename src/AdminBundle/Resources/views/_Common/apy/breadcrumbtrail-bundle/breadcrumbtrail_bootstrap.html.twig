{%- if breadcrumbs.count %}
    <ul class="breadcrumb">
        <li>
            <a href="{{ path('admin_default') }}">
                <span class="glyphicon glyphicon-home" title="Strona główna panelu" data-toggle="tooltip"></span>&nbsp;
            </a>
        </li>
        {% for breadcrumb in breadcrumbs %}
            {% set class = (loop.first ? 'home' : (loop.last ? 'active' : '')) %}
            <li {% for attr,value in breadcrumb.attributes -%}
            {%- if attr == 'class' %}{% set value = value ~ ' ' ~ class %}{% endif -%}
            {{ attr }}="{{ value }}"
        {%- endfor %}
            {% if breadcrumb.attributes.class is not defined %} class="{{ class }}"{% endif %}>
            {%- if breadcrumb.url is null or loop.last -%}
                {{ breadcrumb.title|trans({}, 'menu')| raw }}
            {%- else -%}
                <a href="{{ breadcrumb.url }}">{{ breadcrumb.title|trans({}, 'menu')| raw }}</a>
            {%- endif -%}
            </li>
        {% endfor %}
    </ul>
{%- endif -%}
