                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 hidden-xs text-cell-wrapper no-padding-right no-padding-left">
            <div class="page-cell">
                <div class="page-section">
                    <div class="section-title">
                        <span class="section-title-txt">{{ cmsStaticPage.title| raw }}</span>
                    </div>
                    {#<div class="page-section-title">{{ cmsStaticPage.title| raw }}</div> #}
                    <div class="page-section-subtitle">{{ cmsStaticPage.subTitle| raw }}</div>
                    <div class="page-section-description">
                        {{ cmsStaticPage.descriptionShort| raw }}
                    </div>
                    {{ block('link_see_more') }}
                </div>
            </div>
        </div>
    </div>
</div>