{# @var pageEvents \AdminBundle\Entity\CmsStaticPage #}
{% set pageEvents = pages['events']  %}
<header>
    <h2 class="page-title-header">{{ pageEvents.getTitle()| raw }}</h2>
</header>
<article class="text-justify">
    {{ pageEvents.getDescription()| raw }}
</article>

{# gallery #}
{% set imgFiles = pageEvents.filesByType('img') %}
{% if imgFiles is not empty %}
    <div class="row">
        <div class="col-xs-12 col-md-offset-1 col-md-10 gallery-files-wrapper">
            {% for file in imgFiles %}
                <a href="{{ asset(pageEvents.filesDir ~ file.fileName)  }}">
                    <img src="{{ asset('thumb.php') }}?src={{ asset(pageEvents.filesDir ~ file.fileName)  }}&w=169&h=160" class="gallery-file img-thumbnail img-responsive">
                </a>
            {% endfor %}
        </div>
    </div>
{% endif %}

